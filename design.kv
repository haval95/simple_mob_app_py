<LoginScreen>: 
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            Label:
                text: "User Login"
            TextInput:
                id:username
                hint_text: "Username"
            TextInput:
                id:password
                hint_text: "password"
            Button:
                text:'Login'
                on_press: root.login(root.ids.username.text,root.ids.password.text)
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols:2
            Button: 
                text: "Forgot Password?"
            Button:
                text:"Sign Up"
                on_press: root.sing_up()

<LoginSuccessScreen>:
    GridLayout:
        cols:1
        Button:
            text: "Logout"
            on_press: root.log_out()
        Label:
            text:"How do you feel?"
        TextInput:
            hint_text: "Sad, happy, loved...?"
        Button:
            text: "Enlighten me!"
        Label:
            text: ""

<SignUpScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            Label:
                text: "Sign Up"
            TextInput:
                id: username
                hint_text:"Username"
            TextInput:
                id:password
                hint_text:"Password"
            Button:
                text:"Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpSuccessScreen>:
    GridLayout:
        cols:1
        Label:
            text: "Sign up Successful"
        Button:
            text:"Login"
            on_press:root.go_to_login()



<RootWidget>:
    LoginScreen: 
        name: "login_screen"
    SignUpScreen:
        name:"sign_up_screen"
    SignUpSuccessScreen:
        name: "sign_up_screen_success"
    LoginSuccessScreen:
        name: "login_screen_success"
    

    