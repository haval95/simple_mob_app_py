<LoginScreen>: 
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            size_hint: 0.8,0.8
            Label:
                text: "User Login"
                font_size: "20sp"
            TextInput:
                id:username
                hint_text: "Username"
            TextInput:
                id:password
                hint_text: "password"
                password: True
            RelativeLayout:
                Button:
                    text:'Login'
                    on_press: root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.3,0.6
                    pos_hint: {'center_x': 0.5 , 'center_y': 0.5 }
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols:2
            size_hint: 0.2,0.2
            padding: 10,10
            spacing: 15,15
            Button: 
                text: "Forgot Password?"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1,0.7,1,1
                
            Button:
                text:"Sign Up"
                on_press: root.sing_up()
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1,0.7,1,1
                

<LoginSuccessScreen>:
    GridLayout:
        cols:1
        Button:
            text: "Logout"
            on_press: root.log_out()
        Label:
            text:"How do you feel?"
        TextInput:
            id : user_feeling
            hint_text: "Sad, happy, loved...?"
        Button:
            on_press: root.show_quote(root.ids.user_feeling.text)
            text: "Enlighten me!"
        Label:
            id: quote
            text: ""

<SignUpScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            Label:
                text: "Sign Up"
            TextInput:
                id: username
                hint_text:"Username"
            TextInput:
                id:password
                hint_text:"Password"
            Button:
                text:"Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpSuccessScreen>:
    GridLayout:
        cols:1
        Label:
            text: "Sign up Successful"
        Button:
            text:"Login"
            on_press:root.go_to_login()



<RootWidget>:
    LoginScreen: 
        name: "login_screen"
    SignUpScreen:
        name:"sign_up_screen"
    SignUpSuccessScreen:
        name: "sign_up_screen_success"
    LoginSuccessScreen:
        name: "login_screen_success"
    

    